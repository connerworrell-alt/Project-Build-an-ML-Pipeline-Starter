name: nyc_airbnb

conda_env: conda.yml

entry_points:
  main:
    parameters:
      steps:
        description: Comma-separated list of steps to execute
        type: str
        default: all

      # Optional Hydra tokens. Defaults are truly empty; they won't create args.
      opt1:
        description: First Hydra override token (prefix space when you pass it)
        type: str
        default: ""
      opt2:
        description: Second Hydra override token (prefix space when you pass it)
        type: str
        default: ""
      grid_m:
        description: Hydra multirun flag (prefix space when you pass it)
        type: str
        default: ""

    command: >
      python main.py
      main.steps={steps}{opt1}{opt2}{grid_m}
